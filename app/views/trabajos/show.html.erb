<% content_for :title, "Mostrando trabajo" %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <h1 class="font-bold text-4xl">Mostrando trabajo</h1>

  <%= render @trabajo %>

  <%= link_to "Editar este trabajo", edit_trabajo_path(@trabajo), class: "w-full sm:w-auto text-center text-gray-900 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= link_to "Volver a trabajos", trabajos_path, class: "w-full sm:w-auto text-center text-gray-900 mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <%= button_to "Eliminar este trabajo", @trabajo, method: :delete, form_class: "sm:inline-block mt-2 sm:mt-0 sm:ml-2", class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "¿Estás seguro?" } %>
</div>
