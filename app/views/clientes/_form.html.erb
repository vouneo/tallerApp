<%= form_with(model: cliente, class: "contents") do |form| %>
  <% if cliente.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(cliente.errors.count, "error") %> Este cliente no puede ser guardado:</h2>

      <ul class="list-disc ml-6">
        <% cliente.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": cliente.errors[:nombre].none?, "border-red-400 focus:outline-red-600": cliente.errors[:nombre].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :contacto %>
    <%= form.text_field :contacto, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": cliente.errors[:contacto].none?, "border-red-400 focus:outline-red-600": cliente.errors[:contacto].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
